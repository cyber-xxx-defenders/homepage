{
  "name": "Cyber_Defenders_Javascript",
  "version": "1.0.0",
  "description": "Bulma and others",
  "main": "assets/sass/mybulma.scss",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "node-sass assets/sass/mybulma.scss assets/css/mybulma.css",
    "css-postcss": "postcss --use autoprefixer --output assets/css/mybulma.css assets/css/mybulma.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm run css-deploy && npm run js-build",
    "js-build": "babel assets/babeljs --out-dir assets/js",
    "js-watch": "npm run js-build -- --watch",
    "start": "npm-run-all --parallel css-watch js-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyberdefenders/homepage.git"
  },
  "keywords": [
    "sass"
  ],
  "author": "Vaibhav Bhandari",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cyberdefenders/homepage/issues"
  },
  "homepage": "https://github.com/cyberdefenders/homepage#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-ie": "^6.7.0",
    "bulma": "^0.8.2",
    "gulp": "^4.0.2",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
